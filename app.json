{
  "expo": {
    "name": "truerx-ui",
    "slug": "truerx-ui",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/Icons/appLogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/Images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "icon": "./app/assets/Icons/appLogo.png",
      "color": "#ffffff",
      "android": {
        "channelId": "default"
      }
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow TrueRx to utilize Face ID for accessing app features"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.app.truerx",
      "entitlements": {
        "aps-environment": "production"
      }
    },
    "android": {
      "package": "com.app.truerx",
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/Icons/adaptiveIcon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["android.permission.USE_BIOMETRIC", "android.permission.USE_FINGERPRINT"]
    },
    "web": {
      "favicon": "./app/assets/Icons/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "636fb0bd-529c-4ae1-8a96-c659043db62b"
      }
    },
    "owner": "keyctrl-solutions"
  }
}
